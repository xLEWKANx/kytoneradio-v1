    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/loopback-angular-admin/server/server.js",
            "cwd": "${workspaceRoot}/loopback-angular-admin",
            "env": {
                "DEBUG": "boot:*,player:*",
                "API_URL": "http://localhost:3027/api/"
            },
            "runtimeExecutable": "${workspaceRoot}/loopback-angular-admin/node_modules/.bin/babel-node",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}