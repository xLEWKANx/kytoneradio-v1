doctype html
html(ng-app='kytoneapp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Kytone radio station

    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js')
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")

    //- adding context variable
    block context
    //- adding application libs
    script(src='/app/lib.js', type='text/javascript')

    include styles
  body
    //- navbar
    include ../parts/nav

    //- - - - - - - - -
    //- main  content -
    //- - - - - - - - -
    block content

    //- footer
    include ../parts/footer

    //- audio
    include ../parts/player

    include scripts
