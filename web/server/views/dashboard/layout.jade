

//- navigation mixin
mixin navlist(current)
   each navitem in ['settings', 'posters', 'playlist/day', 'playlist/night', 'events']
      li(class={active: current === navitem})
         a(href='/dashboard/'+navitem)=navitem.charAt(0).toUpperCase() + navitem.slice(1)

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    //- base(href="/admin/control/")
    title Control Center | Kytone
    link(href='https://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/styles/dashboard.css')
    // Optional theme
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='/app/lib.js', type='text/javascript')

    link(href='http://fonts.googleapis.com/css?family=Julius+Sans+One', rel='stylesheet', type='text/css')

  body
    nav.navbar.navbar-default.navbar-fixed-top.dashboard-nav
      .container

        .navbar-header
          button.navbar-toggle.collapsed(type="button",data-toggle="collapse", data-target="#kytone-dashboard-navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand#dash-logo(href="/dashboard")
            include ../svg/dashboard-logo.svg

        .collapse.navbar-collapse#kytone-dashboard-navbar
          ul.nav.navbar-nav
            +navlist(dest)
            //- li: a(href="/dashboard/settings")
            //-    | Settings
            //- li.active: a(href="/dashboard/posters")
            //-    | Posters
            //- li: a(href="/dashboard/player")
            //-    | Player

          ul.nav.navbar-nav.navbar-right
            li
              a(href="/") kytone
            li
              a(href="/dashboard/logout") Logout
    .dashboard
       .content
          .container
            block content
       .container
          footer.footer
             h4 dashboard
             ul
                +navlist(dest)
    script(src='/app/dashboard.js', type='text/javascript')