extends layout.jade

block content
  .panel.panel-default
    .panel-heading
      h1=dest.charAt(0).toUpperCase() + dest.slice(1)
      .info-box
    .panel-body
      .playlist-block
        button(id=context).set-playlist Set playlist
        button(id=context).reload-playlist Reaload Playlist
        .playlist-window
          table.playlist-tracks
            for track in tracks
              ul
                li= track

