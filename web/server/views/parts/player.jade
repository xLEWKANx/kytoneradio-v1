audio(player-status)#player
  source(src='http://central-srv.p-s.org.ua:15002/stream',type="audio/mpeg" crutch)


.player
  .player-wrapper
    .player-left
      table.player-table
        tr.tech-row
          td
          td
        tr.main-row
          td.buttons
            button(ng-click="main.control('play')")#play
              include ../svg/icons/play.svg
            button(ng-click="main.control('pause')")#pause
              include ../svg/icons/pause.svg
          td.volume
            .volume-container
              div(volume-regulator)#slider
        tr.tech-row
          td
          td
    .player-right
      table.player-table
        tr.tech-row
          td
        tr.main-row
          td
            .now-play(title-update)
              p#track-title
                | Kyton Radio (c)
        tr.tech-row
          td
