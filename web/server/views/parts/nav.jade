.offset-top

.header-wrapper(ng-controller="postCtrl as post")
  .header-left
    table.header-table
      tr.top-row
        td.soc-icons(colspan="2")
          a.soc-icon.icon-s(href='#')
            include ../svg/icons/soundcloud.svg
          a.soc-icon.icon-f(href='https://www.facebook.com/kytoneradio' target='_blank')
            include ../svg/icons/facebook.svg
          a.soc-icon.icon-y(href='#')
            include ../svg/icons/youtube.svg
          a.soc-icon.icon-m(href='#')
            include ../svg/icons/mistery.svg
      tr.top-center-row
        td.border-bottom
        td
      tr.bottom-center-row
        td.time
          span#clock= timenow
            //- 17:22 KYIV (+2 GMT)
        td
      tr.bottom-row
        td.border-right
        block player_status
          td#player_status
      tr.tech-row
        td
        td
    .post-left(ng-show="post.isOpened()" class="ng-hide")
      img.post-image(ng-src="{{post.postData.currentPost.pictureUrl}}")
  .header-right
    table.header-table
      tr.top-row
        td.border-right
        td#closepost(ng-show="post.isOpened()" class="ng-hide")
          a(ng-click="post.closePost()")
            include ../svg/close.svg
      tr
        td(colspan="2").playlist-section
          table#playlist
            tr.playlist-track
              td.time 4:20
              td.title BA DUM TSS
            tr.playlist-track
              td.time 14:20
              td.title BA DUM TSS
            tr.playlist-track
              td.time 16:20
              td.title BA DUM TSS
            tr.playlist-track
              td.time 18:20
              td.title BA DUM TSS
            tr.playlist-track
              td.time 20:4
              td.title BA DUM TSS
      tr.bottom-row
        td
          .logo-cell
            .logo
              include ../svg/ky-logo.svg
        td.border-left
          | KYTONE RADIO
      tr.tech-row
        td
        td
    .post-right(ng-show="post.isOpened()" class="ng-hide")
      p.post-content
        | {{post.postData.currentPost.content}}